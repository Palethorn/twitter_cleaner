{
	"name": "Twitter Stripper",
	"version": "0.0.1",
	"manifest_version": 2,
	"description": "Removes annoying twitter sidebar boxes",
	"icons":{
		"512": "512x512.png"
	},
	"browser_action": {
		"default_icon": "icon-strip.png",
		"default_popup": "menu.html"
	},
	"content_scripts": [{
        "matches": ["http://twitter.com/*", "https://twitter.com/*"],
        "js": ["content.js"]
    }],
	"permissions": [
        "activeTab"
    ]
}
